<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.yan.basedemo">

    <application
        android:name=".application.BaseDemoApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainAty">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".aty.DialogExampleAty"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustResize|stateHidden|stateAlwaysHidden|adjustPan" />

        <activity
            android:name=".aty.MultiDownloadAty"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustResize|stateHidden|stateAlwaysHidden|adjustPan" />

        <activity
            android:name=".aty.bar.StatusBarAty"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustResize|stateHidden|stateAlwaysHidden|adjustPan" />
        <activity
            android:name=".aty.bar.NormalStatusBarAty"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustResize|stateHidden|stateAlwaysHidden|adjustPan" />

        <activity
            android:name=".aty.bar.FullStatusBarAty"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustResize|stateHidden|stateAlwaysHidden|adjustPan" />

        <activity
            android:name=".aty.bar.ImgStatusBarAty"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustResize|stateHidden|stateAlwaysHidden|adjustPan" />
        <activity
            android:name=".aty.bar.SlideStatusBarAty"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustResize|stateHidden|stateAlwaysHidden|adjustPan" />

    </application>

</manifest>