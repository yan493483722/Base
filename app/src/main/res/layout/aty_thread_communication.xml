<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingStart="@dimen/margin_all_left_right"
    android:paddingLeft="@dimen/margin_all_left_right"
    android:paddingEnd="@dimen/margin_all_left_right"
    android:paddingRight="@dimen/margin_all_left_right">

    <Button
        android:id="@+id/btn_thread_communication_start_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_all_left_right"
        android:text="开始下载队列"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_thread_communication_insert_last"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_all_left_right"
        android:text="插入新任务到队列尾部"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_thread_communication_start_list" />

    <Button
        android:id="@+id/btn_thread_communication_delete"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_all_left_right"
        android:text="删除队列部分任务（可删除正在进行的）"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_thread_communication_insert_last" />

    <Button
        android:id="@+id/btn_thread_communication_stop_and_first"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_all_left_right"
        android:text="插入到最开始并暂停当前任务"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_thread_communication_delete" />


</androidx.constraintlayout.widget.ConstraintLayout>