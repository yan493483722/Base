<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="35dip"
    android:layout_marginRight="35dip"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/radius_8_top_white"
        android:orientation="vertical"
        android:paddingLeft="@dimen/padding_all_left_right"
        android:paddingRight="@dimen/padding_all_left_right"
        android:paddingTop="30dp">

        <TextView
            android:id="@+id/tv_dg_title"
            style="@style/base_dg_title" />

        <View
            android:id="@+id/v_dg_divider_10"
            android:layout_width="match_parent"
            android:layout_height="15dip" />

        <FrameLayout
            android:id="@+id/fl_dg_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


        </FrameLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="30dip" />
    </LinearLayout>

    <View style="@style/div_horizontal_1px" />

    <TextView
        android:id="@+id/tv_dg_single"
        style="@style/base_dg_btn_text"
        android:layout_width="match_parent"
        android:background="@drawable/selector_dg_single"
        android:text="@string/base_ac_confirm" />

    <LinearLayout
        android:id="@+id/ll_dg_double_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_dg_double_left"
            style="@style/base_dg_btn_text"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:background="@drawable/selector_dg_btn_left"
            android:text="@string/base_ac_cancel" />

        <View style="@style/div_vertical_1px" />

        <TextView
            android:id="@+id/tv_dg_double_right"
            style="@style/base_dg_btn_text"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:background="@drawable/selector_dg_btn_right"
            android:text="@string/base_ac_confirm" />


    </LinearLayout>

</LinearLayout>