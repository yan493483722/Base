<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.Toolbar
        android:id="@+id/tb_base_tb"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        app:popupTheme="@style/OverflowMenuStyle" />


    <LinearLayout
        android:id="@+id/ll_base_tb"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:layout_gravity="bottom"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/ll_base_tb_left"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="center_vertical|start"
            android:paddingLeft="@dimen/padding_all_left_right"
            android:paddingRight="@dimen/padding_all_left_right">

            <ImageView
                android:id="@+id/iv_base_tb_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tv_base_tb_left"
                style="@style/TextAppearance.AppCompat.Widget.ActionBar.Subtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:lines="1"
                android:textColor="@drawable/selector_text_white_to_light" />

        </LinearLayout>

        <FrameLayout
            android:id="@+id/fl_base_tb_title"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="2">

            <TextView
                android:id="@+id/tv_base_tb_title"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:background="@color/transparent"
                android:ellipsize="end"
                android:gravity="center"
                android:lines="1"
                android:scrollHorizontally="true"
                android:textColor="@color/font_white"
                android:textSize="@dimen/font_large" />

            <LinearLayout
                android:id="@+id/ll_base_tb_search"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="13dp"
                android:layout_marginTop="13dp"
                android:background="@drawable/search_base_tool_bar"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:visibility="gone">

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="1dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/icon_search" />

                <EditText
                    android:layout_marginTop="2dp"
                    android:layout_marginBottom="2dp"
                    android:id="@+id/et_base_tb_search"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="5dp"
                    android:textCursorDrawable="@drawable/cursor_color"
                    android:background="@color/transparent"
                    android:ellipsize="end"
                    android:lines="1"
                    android:textColor="@color/font_black"
                    android:textSize="@dimen/font_middle" />
            </LinearLayout>
        </FrameLayout>

        <LinearLayout
            android:id="@+id/ll_base_tb_right"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical|end"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/padding_all_left_right"
            android:paddingRight="@dimen/padding_all_left_right">


            <ImageView
                android:id="@+id/iv_base_tb_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tv_base_tb_right"
                style="@style/TextAppearance.AppCompat.Widget.ActionBar.Subtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:lines="1"
                android:textColor="@drawable/selector_text_white_to_light" />
        </LinearLayout>
    </LinearLayout>
</FrameLayout>