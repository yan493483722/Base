        <attr name="textPaddingRight" format="dimension" />
        <attr name="textPaddingTop" format="dimension" />
        <attr name="textPaddingBottom" format="dimension" />
        <attr name="arcPaddingLeft" format="dimension" />
        <attr name="arcPaddingRight" format="dimension" />
        <attr name="arcPaddingTop" format="dimension" />
        <attr name="arcPaddingBottom" format="dimension" />
    </declare-styleable>

    <declare-styleable name="BaseToolBar">
        <attr name="baseToolBarType">
            <flag name="normal" value="0" />
            <flag name="full" value="1" />
            <!-- 小米手机上效果没有 -->
            <flag name="img_normal" value="2" />
            <flag name="img_full" value="3" />
        </attr>
        <attr name="baseToolBarColor" format="reference|color" />
    </declare-styleable>

