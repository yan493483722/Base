<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="35dip"
    android:layout_marginRight="35dip"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_close"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="gone">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginRight="5dp"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="10dp"
            android:src="@drawable/close" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/radius_8_top_white"
        android:orientation="vertical"
        android:paddingLeft="@dimen/padding_all_left_right"
        android:paddingRight="@dimen/padding_all_left_right"
        android:paddingTop="30dp">

        <TextView
            android:id="@+id/tv_dg_title"
            style="@style/base_dg_title" />

        <View
            android:id="@+id/v_dg_divider_10"
            android:layout_width="match_parent"
            android:layout_height="15dip" />

        <FrameLayout
            android:id="@+id/fl_dg_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <View
            android:layout_width="match_parent"
            android:layout_height="30dip" />
    </LinearLayout>

    <View style="@style/div_horizontal_1px" />

    <FrameLayout
        android:id="@+id/fl_dg_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


</LinearLayout>